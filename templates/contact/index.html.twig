{% extends 'base.html.twig' %}

{% block title %}{{ corp_name }} | Contact{% endblock %}

{% block content %}
    <section class="text-center p-5 rounded mt-5">
        <h1 class="headline mb-3">Contact {{ corp_name }}</h1>
    </section>

    <section class="container py-5">
        <div class="row g-4">
            <div class="col-md-6">
                <h2 class="subhead mb-3">Why Choose Us?</h2>
                <p>We provide experienced, licensed drone operators that will make sure that get the best photo and
                    video of your project. Then we edit your footage with Adobe Premiere to make it look great and
                    give you the results that you want.</p>
            </div>
            <div class="col-md-6">
                <div class="ratio ratio-16x9 shadow-sm rounded">
                    <figure>
                        <div class="video-container rounded shadow-sm">

                            <video controls preload="auto" class="w-100 h-100 rounded" style="object-fit: cover;">
                                <source src="/media/image/78"
                                        type="video/mp4">
                                Your browser does not support the video tag.
                            </video>

                        </div>
                        <figcaption class="text-center text-white mt-2">Beautiful Mansions in Las Olas</figcaption>
                    </figure>
                </div>
            </div>
        </div>
    </section>

    <section class="text-center p-5 rounded">
        <h2 class="subhead mb-3">Get In Touch</h2>
        <p>
            {{ my_name }}<br>
            {{ address }}<br>
            {{ phone }}<br>
            <a href="mailto:{{ email }}">{{ email }}</a>
        </p>
    </section>
{% endblock %}
