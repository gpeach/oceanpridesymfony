{% extends 'base.html.twig' %}

{% block title %}Fort Lauderdale FL Aerial Video | Home{% endblock %}

{% block content %}
    <section class="bg-dark text-white text-center p-5 rounded mt-5">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <h1 class="headline text-start">Welcome to<br>{{ corp_name }}</h1>
                    <p class="text-start">
                        Gary Hardin-Peach<br>
                        Videographer - Camera Operator<br>
                        LICENSED DRONE PILOT<br>
                        Video Editor
                    </p>
                </div>
                <div class="col-md-6">
                    <figure>
                        <div class="ratio ratio-16x9 shadow-sm rounded overflow-hidden">
                            <video controls preload="auto" class="w-100 h-100" style="object-fit: cover;">
                                <source src="/media/image/22" type="video/mp4">
                                Your browser does not support the video tag.
                            </video>
                        </div>
                        <figcaption class="text-center text-white mt-2 fst-italic">Beautiful Mansions in Las Olas</figcaption>
                    </figure>
                </div>
            </div>
        </div>
    </section>

    <section class="bg-dark text-white p-5 rounded">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-6 photo">
                    <h2 class="subhead mt-3 text-start">About Us</h2>
                    <p class="text-start">
                        <strong>Ocean Pride Media
                        </strong> is a creative aerial media company based in South Florida, specializing in
                        high-quality drone photography and video production. Founded with a passion for stunning visuals
                        and a love for coastal living, we capture breathtaking perspectives that elevate your brand,
                        tell your story, and showcase your property from new heights.</p>

                    <p class="text-start">We're FAA Part 107 certified, fully insured, and committed to delivering
                        exceptional results
                        with every flight.
                    </p>
                </div>
                <div class="col-md-6">
                    <figure>
                        <div class="ratio ratio-16x9 shadow-sm rounded overflow-hidden">
                            <video controls preload="auto" class="w-100 h-100" style="object-fit: cover;">
                                <source src="/media/image/26" type="video/mp4">
                                Your browser does not support the video tag.
                            </video>
                        </div>
                        <figcaption class="text-center text-white mt-2 fst-italic">Another Lauderdale By The Sea Sunset</figcaption>
                    </figure>
                </div>
            </div>
        </div>
    </section>

    <section class="bg-dark text-white text-center p-5 rounded">
        <h2 class="subhead">for inquiries:</h2>
        <p>{{ my_name }}<br>{{ address }}<br>{{ phone }}<br><a href="mailto:{{ email }}">{{ email }}</a></p>
    </section>
{% endblock %}
