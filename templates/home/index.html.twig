{% extends 'base.html.twig' %}

{% block title %}Fort Lauderdale FL Aerial Video | Home{% endblock %}

{% block content %}
    <section class="bg-dark text-white text-center p-5 rounded">
        <h1>Welcome to {{ corp_name }}</h1>
        <p>Gary Hardin-Peach</p>
        <p>Videographer - Camera Operator</p>
        <p>LICENSED DRONE PILOT</p>
        <p>Video Editor</p>
    </section>

    <section class="bg-primary text-white p-5 rounded">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-6 photo">
                    <img src="{{ asset("images/dan.png") }}" alt="Your Photo"
                         class="img-fluid rounded shadow-sm photo-lg">
                    <h2 class="mt-3">About Us</h2>
                    <p>Ocean Pride Media was started this year.</p>
                </div>
                <div class="col-md-6">
                    <div class="ratio ratio-16x9">
                        <iframe src="https://www.youtube.com/embed/v4qo-e0m6v8" class="rounded shadow-sm"
                                title="Predators Under The Pier"
                                allowfullscreen allow="autoplay; encrypted-media"></iframe>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section class="bg-dark text-white text-center p-5 rounded">
        <h2>Get in Touch</h2>
        <p>Call {{ phone }} or email <a href="mailto:{{ email }}" class="text-warning">{{ email }}</a></p>
    </section>

    <section class="bg-secondary p-5 text-white text-center rounded photo">
        <div class="container">
            <img src="{{ asset("images/pink.jpg") }}" alt="Main Photo"
                 class="img-fluid rounded shadow-sm mb-3 photo-carousel">
            <div class="d-flex justify-content-center gap-2 flex-wrap">
                <img src="{{ asset("images/pink.jpg") }}" alt="Thumbnail 1" class="img-thumbnail photo-thumbnail"
                     style="width:100px;">
                <img src="{{ asset("images/dan.png") }}" alt="Thumbnail 2" class="img-thumbnail photo-thumbnail"
                     style="width:100px;">
            </div>
        </div>
    </section>

    <section class="bg-dark text-white text-center p-5 rounded">
        <h2>Contact Us</h2>
        <p>{{ my_name }}<br>{{ address }}<br>{{ phone }}<br><a href="mailto:{{ email }}"
                                                               class="text-warning">{{ email }}</a></p>
    </section>
{% endblock %}
