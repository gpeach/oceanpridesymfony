{#                        </figcaption>#}
{#                    </figure>#}
                </div>
            </div>
        </section>

        <section class="section bg-secondary text-white text-center p-1 p-md-4">
            <h2 class="subhead mt-3">for inquiries:</h2>
            <p>{{ my_name }}<br>{{ address }}<br>{{ phone }}<br><a href="mailto:{{ email }}">{{ email }}</a></p>
        </section>
    </div>
{% endblock %}
